{% extends '_layout.html.twig' %}

{% block title %}Wild Circus | Connexion{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('accueil') }}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}
{% block body %}
    <section class="w-100 d-flex flex-column justify-content-center align-items-center bg-primary">
        <h1 class="my-4 font-weight-normal">Bonjour veuillez rentrer vos identifiants</h1>
        <form method="post" class="col-10 p-0 d-flex flex-column align-items-center">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="wildcircus@wild.com" required autofocus>
            </div>
            <div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-red my-3" type="submit">
                Connexion
            </button>
        </form>
        <div class="col-12 p-0 text-center">
            <a class="btn btn-red col-md-3 mt-4 text-center" href="{{ path('hard') }}">Retour</a>
        </div>
    </section>

{% endblock %}
