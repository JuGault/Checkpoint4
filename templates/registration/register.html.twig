{% extends '_layout.html.twig' %}

{% block title %}Wild Circus | Inscription{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('accueil') }}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}
{% block body %}
    <section class="w-100 d-flex flex-column justify-content-center align-items-center bg-primary">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="text-center">S'inscrire dans la tradition</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'col-10 d-flex flex-column align-items-center p-0'}}) }}
        <div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email,{'attr': {'class': 'col-10 p-0'}}) }}
            {% if registrationForm.email.vars.errors is not empty %}
                <div class="mt-2 text-left alert alert-danger">
                    {{ form_errors(registrationForm.email) }}
                </div>
            {% endif %}
        </div>
        <div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'col-10 p-0'}}) }}
        </div>

        <button type="submit" class="btn btn-red my-3">Rentrer dans la famille</button>
        {{ form_end(registrationForm) }}
        <div class="col-12 p-0 text-center">
            <a class="btn btn-red col-md-3 mt-4 text-center" href="{{ path('hard') }}">Retour</a>
        </div>
    </section>

{% endblock %}
