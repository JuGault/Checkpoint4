{% extends '_layout.html.twig' %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('accueil') }}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}
{% block title %}Wild circus | admin | Spectacle {{ show.title }}{% endblock %}

{% block body %}
    <section class="w-100 d-flex flex-column justify-content-center align-items-center bg-primary">
        <h1>Spectacle " {{ show.title }} "</h1>

        <div class="card col-lg-4 message p-0 border-0 align-items-center my-3">
            <div class="card-img-top">
                <img src="{{ show.picture }}" alt="">
            </div>
            <h3 class="col-12 p-0 bg-red text-dark text-center m-0 rounded-top">{{ show.title }}</h3>
            <p>{{ show.description }}</p>
        </div>
        <div class="col-12 p-0 text-center my-3">
            <a class="btn btn-red col-md-3" href="{{ path('show_edit', {'id': show.id}) }}">Modifier</a>
        </div>
        <div class="col-12 p-0 text-center my-3">
            {{ include('show/_delete_form.html.twig') }}
        </div>
        <div class="col-12 p-0 text-center my-3">
            <a class="btn btn-red col-md-3" href="{{ path('show_index') }}">Retour</a>
        </div>

    </section>
{% endblock %}

