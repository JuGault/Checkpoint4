{{ form_start(form,{'attr': {'class': 'col-10 d-flex flex-column align-items-center p-0 my-4'}}) }}
<div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
    {{ form_label(form.title) }}
    {{ form_widget(form.title,{'attr': {'class': 'col-10 p-0'}}) }}
    {% if form.title.vars.errors is not empty %}
        <div class="mt-2 text-left alert alert-danger">
            {{ form_errors(form.title) }}
        </div>
    {% endif %}
</div>
<div class="d-flex flex-column my-3 justify-content-center align-items-center col-md-6 p-0">
    {{ form_label(form.description) }}
    {{ form_widget(form.description,{'attr': {'class': 'col-10 p-0'}}) }}
    {% if form.description.vars.errors is not empty %}
        <div class="mt-2 text-left alert alert-danger">
            {{ form_errors(form.description) }}
        </div>
    {% endif %}
</div>
<button class="btn btn-red my-3">Enregistrer</button>
{{ form_end(form) }}
